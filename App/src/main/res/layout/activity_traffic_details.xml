<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bck"
    android:orientation="vertical"
    tools:context="com.nansk.smartcity.activity.traffic.TrafficIllegalDetailsActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_iv"
                android:layout_width="match_parent"
                android:layout_height="180dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/trafficOffence_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="违法行为："
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/divider_gray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#0DCC0000"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/money_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="罚款100元"
                            android:textColor="#F44336"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/deductMarks_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="记3分"
                            android:textColor="#F44336"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/disposeState_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="处理状态"
                        android:textColor="@color/gray_66"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="违法车辆"
                        android:textColor="@color/gray_99"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/licencePlate_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="违法车辆"
                        android:textColor="@color/gray_66"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="违法地点"
                        android:textColor="@color/gray_99"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/illegalSites_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="违法地点"
                        android:textColor="@color/gray_66"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="违法时间"
                        android:textColor="@color/gray_99"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/badTime_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="违法时间"
                        android:textColor="@color/gray_66"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="通知书号"
                        android:textColor="@color/gray_99"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/noticeNo_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="通知书号"
                        android:textColor="@color/gray_66"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="撤销申请"
                    android:layout_centerVertical="true"
                    android:textColor="@color/gray_66"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:rotation="-90"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right" />
            </RelativeLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="15dp">

        <Button
            android:id="@+id/dispose_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="处理"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>