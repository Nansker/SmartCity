<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lineName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一号线"
            android:textColor="@color/black_33"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reachTime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="到站时间"
            android:textColor="@color/black_33"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/metro_step_pre"
                android:layout_width="18dp"
                android:layout_marginRight="5dp"
                android:layout_height="18dp"/>

            <TextView
                android:id="@+id/preStep_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="45dp"
                android:text="北京站"
                android:textColor="@color/gray_66"
                android:textSize="14sp" />

            <GridLayout
                android:id="@+id/preStep_lines"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:columnCount="4"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/metro_step_next"
                android:layout_width="18dp"
                android:layout_marginRight="5dp"
                android:layout_height="18dp"/>

            <TextView
                android:id="@+id/nextStep_tv"
                android:layout_width="wrap_content"
                android:minWidth="45dp"
                android:layout_height="wrap_content"
                android:text="东单"
                android:textColor="@color/gray_66"
                android:textSize="14sp" />
            <GridLayout
                android:id="@+id/nextStep_lines"
                android:columnCount="4"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>